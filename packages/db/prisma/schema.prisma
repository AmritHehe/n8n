generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model user{ 
  id   String @id @default(uuid())
  name String  @unique
  pass String 
  workflow workflow[]
  credentials credentials[]
  res Responses[]
}
model workflow{ 
  id Int @id @default(autoincrement())
  title String
  nodes String
  Connections String
  user user @relation(fields: [userId] , references: [id] )
  userId String 
  res Responses?
}
model Responses{ 
  id Int @id @default(autoincrement())
  workflow workflow @relation(fields: [workflowId] , references: [id])
  user user @relation(fields: [userId] , references: [id])
  data String
  userId String
  workflowId Int @unique
  
}
model credentials{ 
  id Int @id @default(autoincrement())
  title String 
  platform String
  data Json
  user user @relation(fields: [userId] , references: [id])
  userId String
}

